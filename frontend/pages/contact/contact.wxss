/* pages/contact/contact.wxss */

page {
    background-color: #f1f1f1;
    font-size: large;
  }
  
  .inputRoom {
    width: 100vw;
    height: 16vw; 
    border-top: 1px solid #cdcdcd;
    background-color: #f1f1f1;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    z-index: 20;
  }

  .title{
    width: 100vw;
    height: 13vw; 
    border-top: 1px solid #cdcdcd;
    background-color: #f1f1f1;
    color: black;
    position:  fixed;
    top:0;
    /* display: flex; */
    text-align: center;
    justify-content: center;
    z-index: 20;
    font-size: 70rpx;
  }

  .hr1 {
    height: 3px;
    background-color: black;
    opacity: 0.2;
  }

  input {
    width: 76vw;
    height: 9.33vw;
    background-color: #fff;
    border-radius: 40rpx;
    margin-left: 2vw;
    padding: 0 3vw;
    font-size: 28rpx;
    color: #444;
  }
  
  .leftMsg {
    font-size: 35rpx;
    color: #444;
    line-height: 7vw;
    padding: 2vw 2.5vw;
    background-color: #fff;
    margin-left: -1.6vw;
    border-radius: 10rpx;
    z-index: 10;
  }
  
  .rightMsg {
    font-size: 35rpx;
    color: #444;
    line-height: 7vw;
    padding: 2vw 2.5vw;
    background-color: #96EB6A;
    margin-right: -1.6vw;
    border-radius: 10rpx;
    z-index: 10;
  }
